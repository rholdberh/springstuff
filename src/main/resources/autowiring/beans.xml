<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-init-method="init"
       default-destroy-method="destroy">

    <bean id="logger"
          class="com.learningspring.autowiring.Logger" autowire="constructor"> <!-- makes initialization by type-->

    </bean>
    <bean id="consoleWriter"
          class="com.learningspring.autowiring.ConsoleWriter">

    </bean>
    <bean id="fileWriter"
          class="com.learningspring.autowiring.FileWriter">
    </bean>

</beans>